echo "ğŸ” Running pre-commit checks..."

# Check for merge conflict markers
if ! git diff --cached --check; then
  echo "âŒ Found merge conflict markers!"
  exit 1
fi

# Check for console.log (optional warning)
if git diff --cached --name-only | xargs grep -n "console\\.log" 2>/dev/null; then
  echo "âš ï¸  Warning: Found console.log statements"
  echo "   Consider removing them before committing to production"
fi

# Auto-format code
echo "ğŸ¨ Auto-formatting code..."
pnpm run format

# Re-add formatted files to staging
git add -u

echo "âœ… Code formatted successfully!"

# Run linting
echo "ğŸ” Running linter..."
pnpm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Lint check failed! Run 'pnpm run lint:fix' to fix."
  exit 1
fi

# Run Astro build to catch MDX and component errors
echo "ğŸ—ï¸  Building project..."
pnpm run build

if [ $? -eq 0 ]; then
  echo "âœ… All checks passed! Proceeding with commit..."
else
  echo "âŒ Build failed! Please fix errors before committing."
  exit 1
fi
