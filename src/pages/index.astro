---
import { Icon } from 'astro-icon/components';
import { SITE } from '../config';
import Jumbotron from '../components/Jumbotron.astro';
import Layout from '../layouts/Layout.astro';
import Headline from '../components/Headline.vue';
import Button from '../components/Button.vue';
import Quote from '../components/Quote.vue';

const navItems = [
  {
    title: 'Core',
    description: 'Base colors, typography, shadows etc.',
    url: '/core/introduction',
    icon: 'streamline-freehand-color:database',
  },
  {
    title: 'Components',
    description: 'The building blocks for our UI.',
    url: '/components/buttons',
    icon: 'streamline-freehand-color:module-building-blocks',
  },
  {
    title: 'Patterns',
    description: 'Common patterns for building interfaces.',
    url: '/patterns/introduction',
    icon: 'streamline-freehand-color:layouts-array-1',
  },
];

const features = [
  {
    title: 'Astro-Powered',
    icon: 'vscode-icons:file-type-light-astro',
    description:
      'Built with <a href="https://astro.build/" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800 underline transition-colors">Astro</a> for lightning-fast performance and seamless integration with modern frameworks.',
  },
  {
    title: 'Rich Components',
    icon: 'streamline-freehand-color:data-transfer-document-module',
    description:
      '20+ production-ready components including buttons, modals, carousels, and specialized automotive elements.',
  },
  {
    title: 'UnoCSS Styling',
    icon: 'vscode-icons:file-type-unocss',
    description:
      'Atomic CSS approach with <a href="https://unocss.dev/" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800 underline transition-colors">UnoCSS</a> for flexible, maintainable styling and consistent design tokens.',
  },
  {
    title: 'Vue Integration',
    icon: 'vscode-icons:file-type-vue',
    description:
      'Seamless <a href="https://vuejs.org/" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800 underline transition-colors">Vue 3</a> component integration with TypeScript support for interactive elements.',
  },
  {
    title: 'Design Patterns',
    icon: 'streamline-freehand-color:design-process-drawing-board',
    description: 'Proven patterns and layouts for common use cases, from landing pages to product catalogs.',
  },
  {
    title: 'Developer Ready',
    icon: 'streamline-freehand-color:app-window-source-code',
    description:
      'Complete documentation, TypeScript support, and easy npm installation for quick project setup.',
  },
];

const exampleSites = [
  {
    url: 'https://catalog.polo.blue',
    title: 'catalog.polo.blue',
    description: 'Car parts catalog',
  },
  {
    url: 'https://polo.blue',
    title: 'polo.blue',
    description: 'Polo 6R DIY workshop & guides',
  },
  {
    url: 'https://sale.polo.blue/',
    title: 'sale.polo.blue',
    description: 'Used car parts marketplace',
  },
  {
    url: 'https://polo6r.pl',
    title: 'polo6r.pl',
    description: 'Polo V Manual',
  },
];
---

<Layout>
  <div class="bg-slate-100 min-h-screen text-center">
    <Jumbotron title={SITE.title}>
      <p
        slot="subtitle"
        class="mt-3 text-base text-gray-200 sm:mt-5 text-lg md:text-xl lg:mx-0 md:mt-5"
        set:html={SITE.description}
      />

      <Button slot="cta-content" href="/core/introduction/" title="Spoko Design System" primary rounded>
        Read More
      </Button>
    </Jumbotron>
    <nav>
      <div
        class="px-4 flex-col flex flex-wrap md:flex-nowrap gap-4 max-w-5xl mx-auto text-left mt-12 md:(px-0 flex-row)"
      >
        {
          navItems.map(({ title, description, url, icon }) => (
            <a
              href={url}
              title={description}
              class="flex w-full flex-wrap bg-white rounded-md hover:-translate-y-1 hover:shadow-lg transition-all flex-1 items-center py-10 px-4 md:(flex-col w-auto flex-nowrap text-center py-16)"
            >
              <Headline as="h2" class="text-3xl" underline={false}>
                <Icon name={icon} aria-hidden="true" class="text-blue-400 mr-3 text-4xl" />
                {title}
              </Headline>
              <p class="text-slate-500 w-full">{description}</p>
            </a>
          ))
        }
      </div>
    </nav>

    <!-- Features Section -->
    <section class="py-16 px-4 max-w-5xl mx-auto">
      <div class="text-center mb-12">
        <Headline as="h2" class="text-3xl md:text-4xl text-gray-900 mb-6" underline="center">
          Why Spoko Design System?
        </Headline>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          A modern, comprehensive design system built with Astro and Vue, featuring consistent components and
          patterns for rapid development.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          features.map(({ title, icon, description }) => (
            <div class="text-center p-6 bg-white rounded-lg shadow-sm border border-gray-100">
              <Headline
                as="h3"
                class="text-2xl mb-3 text-gray-900 flex items-center justify-center"
                underline={false}
              >
                <Icon name={icon} aria-hidden="true" class="text-4xl text-blue-400 mr-3" />
                {title}
              </Headline>
              <p class="text-gray-600" set:html={description} />
            </div>
          ))
        }
      </div>
    </section>

    <div class="mt-12 py-20 bg-blue-darker bg-vw text-white flex items-center justify-center relative">
      <Quote>
        <blockquote>
          Well done is better than well said.
          <small class="block font-headlight">- Benjamin Franklin</small>
        </blockquote>
      </Quote>
    </div>

    <!-- Download & Examples Section -->
    <section class="py-16 px-4 max-w-6xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-8 md:gap-12">
        <!-- Download Section -->
        <div class="text-center">
          <Headline underline as="h2" class="text-3xl text-gray-900 mb-8">
            <Icon
              name="streamline-freehand-color:archive-box"
              aria-hidden="true"
              class="text-4xl text-blue-400 mr-3"
            />
            Get Started
          </Headline>

          <!-- Installation Commands -->
          <div class="bg-gray-900 rounded-lg p-6 mb-6 text-left space-y-4">
            <div>
              <p class="text-gray-400 text-sm mb-2">Install via npm:</p>
              <code class="text-green-400 font-mono text-lg">npm install spoko-design-system</code>
            </div>
            <div>
              <p class="text-gray-400 text-sm mb-2">Or with pnpm (recommended):</p>
              <code class="text-blue-400 font-mono text-lg">pnpm add spoko-design-system</code>
            </div>
          </div>

          <!-- Download Links -->
          <div class="flex justify-center gap-6 mb-6">
            <a
              href="https://www.npmjs.com/package/spoko-design-system"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-3 bg-red-600 hover:bg-red-700 text-white px-6 py-3 rounded-lg transition-colors"
            >
              <Icon name="vscode-icons:file-type-npm" class="text-3xl" />
              <span class="font-semibold">npm Package</span>
            </a>
            <a
              href="https://github.com/polo-blue/sds"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-3 bg-gray-800 hover:bg-gray-900 text-white px-6 py-3 rounded-lg transition-colors"
            >
              <Icon name="mdi:github" class="text-2xl" />
              <span class="font-semibold">Source Code</span>
            </a>
          </div>

          <p class="text-gray-600 text-sm">
            TypeScript support included • Complete documentation • Production ready
          </p>
        </div>

        <!-- Examples Section -->
        <div class="text-center">
          <Headline underline as="h2" class="text-3xl text-gray-900 mb-8">
            <Icon
              name="streamline-freehand-color:coding-files-network-folder"
              aria-hidden="true"
              class="text-4xl text-blue-400 mr-3"
            />
            Live Examples
          </Headline>

          <!-- Example Sites Grid -->
          <div class="grid gap-4 mb-6">
            {
              exampleSites.map(({ url, title, description }) => (
                <a
                  href={url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center justify-between p-4 bg-white border border-gray-200 rounded-lg hover:border-blue-400 hover:shadow-md transition-all group"
                >
                  <div class="text-left">
                    <h4 class="font-semibold text-gray-900 group-hover:text-blue-600">{title}</h4>
                    <p class="text-sm text-gray-600">{description}</p>
                  </div>
                  <Icon name="lucide:link" class="text-gray-400 group-hover:text-blue-400" />
                </a>
              ))
            }
          </div>

          <p class="text-gray-600 text-sm">See the design system in action across different project types</p>
        </div>
      </div>
    </section>
  </div>
  <script is:inline></script>
</Layout>
<style>
  .example-link {
    @apply transition ease-in-out delay-200 duration-300 text-blue-medium hover:(text-accent-light decoration-blue-medium) underline decoration-white;
  }
</style>
